{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VMName": {
            "defaultValue": "VM-ENVIRONMENT-NUMBER",
            "type": "String"
        },
        "diskid": {
            "defaultValue": "",
            "type": "String"
        },
        "nicid": {
            "defaultValue": "",
            "type": "String"
        },
         "external0": {
            "defaultValue": "",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2022-03-01",
            "name": "[parameters('VMName')]",
            "location": "eastus",
            "tags": {
                "Owner": "Xavier Garcia",
                "Application": "AvePoint Migration VM",
                "Services": "Fly Manager System and Fly Agent System",
                "VMSchedule-Enabled": "Yes",
                "VMSchedule-Weekdays": "06-18",
                "VMSchedule-UTCOffset": "-4",
                "VMSchedule-Weekends": "Off",
                "VMSchedule-Exclusions": "Start"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_b2s"
                },
                "storageProfile": {
                    "osDisk": {
                        "osType": "Windows",
                        "createOption": "Attach",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "id": "[parameters('diskid')]"
                        },
                        "deleteOption": "Detach"
                    },
                    "dataDisks": [
                        {
                            "lun": 2,
                            
                            "createOption": "Attach",
                            "caching": "ReadWrite",
                            "writeAcceleratorEnabled": false,
                            "managedDisk": {
            
                                "id": "[parameters('external0')]"
                            },
                            "deleteOption": "Detach",
                           
                            "toBeDetached": true
                        }
                        
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('nicid')]",
                            "properties": {
                                "deleteOption": "Detach"
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        }
    ]
}