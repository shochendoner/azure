{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VMName": {
            "defaultValue": "VM-ENVIRONMENT-NUMBER",
            "type": "String"
        },
        "diskid": {
            "defaultValue": "",
            "type": "String"
        },
        "nicid": {
            "defaultValue": "",
            "type": "String"
        },
        "disks_f_externalid": {
            "defaultValue": "",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2022-03-01",
            "name": "[parameters('VMName')]",
            "location": "eastus",
            "tags":  {
                "CreatedBy": "Naf",
                "Requested By": "Doug Bayne",
                "Purpose": "CTERA",
                "Environment": "UAT",
                "VMSchedule-Enabled": "Yes",
                "VMSchedule-Weekdays": "06-18",
                "VMSchedule-UTCOffset": "-4",
                "VMSchedule-Weekends": "Off",
                "VMSchedule-Exclusions": "Start"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D2s_v3"
                },
                "storageProfile": {
                    "osDisk": {
                        "osType": "Linux",
                        "createOption": "Attach",
                        "caching": "ReadOnly",
                        "managedDisk": {
                            "id": "[parameters('diskid')]"
                        },
                        "deleteOption": "Detach"
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                           
                            "createOption": "Attach",
                            "caching": "ReadOnly",
                            "writeAcceleratorEnabled": false,
                            "managedDisk": {
                                "id": "[parameters('disks_f_externalid')]"
                            },
                            "toBeDetached": false
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('nicid')]",
                            "properties": {
                                "deleteOption": "Detach"
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        }
    ]
}