{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VMName": {
            "defaultValue": "VM-ENVIRONMENT-NUMBER",
            "type": "String"
        },
        "diskid": {
            "defaultValue": "",
            "type": "String"
        },
        "nicid": {
            "defaultValue": "",
            "type": "String"
        }
        
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2022-03-01",
            "name": "[parameters('VMName')]",
            "location": "eastus",
            "tags": {
                "Environment": "SphereUS",
                "Function": "Developer",
                "Impact": "Medium",
                "CreatedBy": "Steven.Hochendoner",
                "CreatedOn": "11-08-2022",
                
                "Owner": "Charles Lane",
                "Role": "Workstation",
                "VMSchedule-Enabled": "Yes",
                "VMSchedule-Weekdays": "06-18",
                "VMSchedule-UTCOffset": "-5",
                "VMSchedule-Weekends": "Off",
                "VMSchedule-Exclusions": "Start"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B4ms"
                },
                "storageProfile": {
                    "osDisk": {
                        "osType": "Windows",
                        "createOption": "Attach",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "id": "[parameters('diskid')]"
                        },
                        "deleteOption": "Detach"
                    },
                    "dataDisks": [
                       
                        
                            
                       
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('nicid')]",
                            "properties": {
                                "deleteOption": "Detach"
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        }
    ]
}